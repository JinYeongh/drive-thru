<Page x:Class="real_drive.select_type"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="select_type"
      Background="Transparent">

    <!-- 전체 배경 -->
    <Grid Background="Transparent" ClipToBounds="True">

        <!-- 카드형 팝업 -->
        <Border Width="500" Height="400"
                Background="#FFF8F0"
                CornerRadius="20"
                Padding="30"
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#FFC107"
                BorderThickness="5"
                SnapsToDevicePixels="True"
                UseLayoutRounding="True">

            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="#FFF8F0">

                <!-- 버튼 그룹 -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,20"
                            VerticalAlignment="Center">

                    <!-- 미디움 버튼 -->
                    <Button x:Name="MediumBtn"
                            Width="180"
                            Height="90"
                            FontSize="24"
                            FontWeight="Bold"
                            Background="#FFE96B"
                            Foreground="DarkRed"
                            FontFamily="맑은 고딕"
                            BorderThickness="0"
                            Margin="0,0,10,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="20">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      TextBlock.TextAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Content>
                            <TextBlock TextAlignment="Center">
                                <Run Text="미디움 세트"/>
                                <LineBreak/>
                                <Run Text="+0"/>
                            </TextBlock>
                        </Button.Content>
                    </Button>

                    <!-- 라지 버튼 -->
                    <Button x:Name="LargeBtn"
                            Width="180"
                            Height="90"
                            FontSize="24"
                            FontWeight="Bold"
                            Background="#FFE96B"
                            Foreground="DarkRed"
                            FontFamily="맑은 고딕"
                            BorderThickness="0"
                            Margin="10,0,0,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="20">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      TextBlock.TextAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Content>
                            <TextBlock TextAlignment="Center">
                                <Run Text="라지 세트"/>
                                <LineBreak/>
                                <Run Text="+800"/>
                            </TextBlock>
                        </Button.Content>
                    </Button>
                </StackPanel>

                <!-- 상태 텍스트 -->
                <TextBlock x:Name="ListeningStatusText"
                           Text="음성 인식 대기 중..."
                           FontSize="22"
                           Foreground="Gray"
                           TextAlignment="Center"
                           FontFamily="맑은 고딕"
                           TextWrapping="Wrap"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
